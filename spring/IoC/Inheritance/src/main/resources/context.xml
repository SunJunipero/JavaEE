<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.1.xsd">

    <bean name="date" class="java.util.Date"/>
    
    <bean name="person" abstract="true" class="bean.Person">
        <property name="name" value="Kostya"/>
        <property name="id" value="1231"/>
        <property name="birth" ref="date"/>
    </bean>

    <bean name="adult" class="bean.Adult" parent="person">
        <property name="number" value="12"/>
        <property name="sirial" value="34"/>
        <property name="snils" value="55"/>
    </bean>

    <bean name="child" class="bean.Child" parent="person">
        <property name="name" value="Konstantin"/>
        <property name="parent" ref="adult"/>
    </bean>
          
        
</beans>